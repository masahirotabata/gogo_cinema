<div class = "contents">
  <div class='row'>
    <div class='col-md-9 offset-md-1'>
      <h3>映画を登録してください。</h3>
      <%= form_with model: @movie, url:public_movies_path, local: true do |f| %>
      <table border ="1" >
        <tr>
          <th>入力項目</th>
          <th>入力欄</th>
        </tr>
        <tr>
          <td> 
            <%= f.label :movie_name, "映画名" %>
          </td>
          <td>
            <%= f.text_area :movie_name, placeholder: "ここに映画名を入力します" %>
          </td>
        </tr>
        <tr>
          <td>
            画像選択
          </td>
          <td>
            <%= f.attachment_field :image %>
          </td>
        <tr></tr>
         
        </table>
        <%= f.submit "投稿する", class:"btn btn-success" %>
      </div>
        <% end %>
    </div>
</div>
